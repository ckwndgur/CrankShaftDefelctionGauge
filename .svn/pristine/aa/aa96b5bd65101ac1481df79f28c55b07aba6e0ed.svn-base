<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nsl.orion.crankshaftdeflectiongauge"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nsl.orion.crankshaftdeflectiongauge.activity.MainMenu"
            android:label="@string/title_main_menu_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nsl.orion.crankshaftdeflectiongauge.activity.CrankshaftList"
            android:label="@string/title_crankshaft_list_screen" >
        </activity>
        <activity
            android:name="nsl.orion.crankshaftdeflectiongauge.activity.Setting"
            android:label="@string/title_setting_screen" >
        </activity>
        <activity
            android:name="nsl.orion.crankshaftdeflectiongauge.activity.CylinderTest"
            android:label="@string/title_cylinder_measure_screen" >
        </activity>
    </application>

</manifest>