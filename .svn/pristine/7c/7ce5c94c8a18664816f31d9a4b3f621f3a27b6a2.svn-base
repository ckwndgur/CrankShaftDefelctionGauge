<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:orientation="vertical"
    tools:context="nsl.orion.crankshaftdeflectiongauge.activity.EngineList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/etEngineName"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:hint="@string/hint_crankshaft_name"
            android:textColorHint="@color/cyan"
            />
        <EditText
            android:id="@+id/etNumOfCylinder"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:hint="@string/hint_number_of_cylinder"
            android:textColorHint="@color/cyan"/>
        <Button
            android:id="@+id/add_btn"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="@string/add_btn"
            android:background="@color/cyan"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/engine_list_name"
            android:textSize="20sp"
            android:textColor="@color/cyan"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/cyan"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical"
            android:id="@+id/crankshaftlist">

        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/cyan"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/del_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_delete_white_48dp"
            android:background="@color/cyan" />
    </LinearLayout>
</LinearLayout>
