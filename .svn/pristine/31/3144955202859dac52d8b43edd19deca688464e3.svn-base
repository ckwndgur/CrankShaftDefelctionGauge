<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="11">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vertical and Horizontal Deflection Data"
            android:textColor="@color/cyan"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18dp"
            android:background="@color/white"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/chart_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.9"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:background="@color/white">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:weightSum="7"
        android:orientation="horizontal"
        android:background="@color/cyan">
        <TextView
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Cylinder"
            android:textSize="18sp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="BP"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="P"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="T"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="E"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="BE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.9">
        <ListView
            android:id="@+id/cylinderTableListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="right"
        android:background="@color/cyan">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="110dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/nameOfengine"/>

        <ImageView
            android:id="@+id/list_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_list_white_48dp"
            android:background="@color/cyan"
            android:onClick="showEngineListPopup"/>
    </LinearLayout>
</LinearLayout>