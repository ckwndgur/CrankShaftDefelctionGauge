<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="7">
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textColor="@color/cyan"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@color/highlightgrey"
        android:textStyle="bold"
        android:layout_weight="1"
        android:id="@+id/cylinderorder">
    </TextView>

    <TextView
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:textColor="@color/cyan"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@color/highlightgrey"
        android:layout_weight="1"
        android:id="@+id/crankBP">
    </TextView>

    <TextView
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:textColor="@color/cyan"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@color/highlightgrey"
        android:layout_weight="1"
        android:id="@+id/crankP">
    </TextView>

    <TextView
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textColor="@color/cyan"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@color/highlightgrey"
        android:layout_weight="1"
        android:id="@+id/crankT">
    </TextView>

    <TextView
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/cyan"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@color/highlightgrey"
        android:layout_weight="1"
        android:id="@+id/crankE">
    </TextView>

    <TextView
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/cyan"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@color/highlightgrey"
        android:layout_weight="1"
        android:id="@+id/crankBE">
    </TextView>
    <TextView
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:textColor="@color/cyan"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@color/highlightgrey"
        android:textStyle="bold"
        android:layout_weight="1"
        android:id="@+id/cylinderdateOfcreation">
    </TextView>
</LinearLayout>