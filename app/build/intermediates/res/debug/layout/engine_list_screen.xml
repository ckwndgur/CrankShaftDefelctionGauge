<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:orientation="vertical"
    tools:context="nsl.orion.crankshaftdeflectiongauge.activity.EngineList"
    android:id="@+id/abcd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cyan"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:layout_weight="4"
            android:gravity="right"
            android:text="0%"
            android:id="@+id/percent_battery"/>
        <ProgressBar
            android:id="@+id/progressbar_battery"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:progress="0"
            android:indeterminate="false"
            android:max="100"
            android:minHeight="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:gravity="right|center"
        android:paddingRight="10dp"
        android:textColor="@color/cyan">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/cyan"
            android:text="@string/no_connected_device"
            android:id="@+id/device_name_text_view"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/etEngineName"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:textColor="@color/cyan"
            android:hint="@string/hint_crankshaft_name"
            android:textColorHint="@color/cyan" />
        <EditText
            android:id="@+id/etNumOfCylinder"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:textColor="@color/cyan"
            android:maxLength="2"
            android:hint="@string/hint_number_of_cylinder"
            android:textColorHint="@color/cyan"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/add_btn"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:text="@string/add_btn"
                android:onClick="addEngine"
                android:background="@color/cyan"/>
            <Button
                android:id="@+id/update_btn"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:text="@string/update_btn"
                android:visibility="gone"
                android:onClick="updateEngine"
                android:background="@color/cyan"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/engine_list_name"
            android:textSize="20sp"
            android:textColor="@color/cyan"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/cyan"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical"
            android:id="@+id/engineListView">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/cyan"
        android:weightSum="1">
    </LinearLayout>
</LinearLayout>

